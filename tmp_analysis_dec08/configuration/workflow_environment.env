# Environment variables for workflow development with Docker PostgreSQL
SECRET_KEY=workflow-dev-secret-key-for-testing
DEBUG=True

# PostgreSQL Database Configuration (Docker)
DB_NAME=edms_db
DB_USER=edms_user
DB_PASSWORD=edms_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# File Upload Settings
MAX_UPLOAD_SIZE=50485760  # 50MB

# Workflow Settings
WORKFLOW_TIMEOUT_DAYS=30
WORKFLOW_REMINDER_DAYS=7