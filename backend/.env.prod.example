# Django Settings
DJANGO_SETTINGS_MODULE=edms.settings.production
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-ip-address

# Database Configuration
DB_NAME=edms_prod_db
DB_USER=edms_prod_user
DB_PASSWORD=change-this-strong-password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Configuration (add your frontend URLs)
CORS_ALLOWED_ORIGINS=http://your-domain.com,http://your-ip:3001

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False

# Storage Configuration
MEDIA_ROOT=/app/storage/media
STATIC_ROOT=/app/staticfiles

# Security Settings
CSRF_TRUSTED_ORIGINS=http://your-domain.com,http://your-ip:3001
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Application Environment
ENVIRONMENT=production
